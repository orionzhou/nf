process.conda = "$NXF_CONDA_CACHEDIR/rnaseq"

params {
  qcdir = "$proj/chipseq/data/11_qc"
  s3dir = "$proj/s3/zhoup-multiqc"
}

process {
  withName:fmt { executor = 'local' }
  withName:pseq {
    cpus = 1
    memory = 25.GB
    time = 10.h
  }
  withName:metaplot {
    cpus = 2
    memory = 35.GB
    time = 5.h
  }
  withName:bwa {
    cpus = 4
    memory = 45.GB
    time = 5.h
  }
  withName:hs2 {
    cpus = 4
    memory = 45.GB
    time = 5.h
  }
  withName:mqc {
    cpus = 1
    memory = 35.GB
    time = 15.h
  }
}
